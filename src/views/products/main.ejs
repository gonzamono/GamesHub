<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body class="body-main">
  <%- include('../partials/header') %>
    <main>
       <%- include('../partials/carousel-main') %>
        <div class="container-main">
            <div class="container-section">
                <div class="section-1">
                    <div class="section-title">
                        <div class="box-title">
                            <h3>Los m√°s vendidos</h3>
                        </div>
                        <div class="button">
                            <a href="/best-selling">Ver todos</a>
                        </div>
                    </div>
                    <section class="best-selling">
                        <% let count = 0 %> 
                        <% for(let i=0;i<products.length;i++){%>
                            <% if(products[i].section == 'sellers' && count<=3){ %>
                                <% count++ %> 
                                <a href="/product/<%=products[i].id%>">
                                <div class="card">
                                    <img src="<%=products[i].imageUri%>" alt="imagen-game">
                                    <h4><%=products[i].name%></h4>
                                    <p class="price"><%=products[i].value %> - <span><a href="<%=products[i].tag %>">COMPRAR</a></span></p>
                                </div>
                            </a>
                            <%} %>
                        <%} %>
                    </section>
                </div>
                <div class="section-2">
                    <div class="section-title">
                        <div class="box-title">
                            <h3>Recomendados</h3>
                        </div>
                        <div class="button">
                            <a href="/recommended">Ver todos</a>
                        </div>
                    </div>
                    <section class="recommended">
                        <% count = 0 %> 
                        <% for(let i=0;i<products.length;i++){%>
                            <% if(products[i].section == 'recommended' && count<=3){ %>
                                <% count++ %> 
                                <a href="/product/<%=products[i].id%>">
                                <div class="card">
                                    <img src="<%=products[i].imageUri%>" alt="imagen-game">
                                    <h4><%=products[i].name%></h4>
                                    <p class="price"><%=products[i].value %> - <span><a href="<%=products[i].tag %>">COMPRAR</a></span></p>
                                </div>
                                </a>
                            <%} %>
                        <%} %>
                    </section>
                </div>
                <div class="section-3">
                    <div class="section-title">
                        <div class="box-title">
                            <h3>Ofertas</h3>
                        </div>
                        <div class="button">
                            <a href="/offers">Ver todos</a>
                        </div>
                    </div>
                    <section class="offers">
                        <% count = 0 %> 
                        <% for(let i=0;i<products.length;i++){%>
                            <% if(products[i].section == 'offer' && count<=3){ %>
                                <% count++ %> 
                                <a href="/product/<%=products[i].id%>">
                                <div class="card">
                                    <img src="<%=products[i].imageUri%>" alt="imagen-game">
                                    <h4><%=products[i].name%></h4>
                                    <p class="price">USD <%=products[i].value %> - <span><a href="<%=products[i].tag %>">COMPRAR</a></span></p>
                                </div>
                                </a>
                            <%} %>
                        <%} %>
                    </section>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/carousel.js"></script>
</body>

</html>