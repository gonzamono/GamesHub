<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>
  <div class="button-list-div">
  <a href="/users/adminPanel"><button class="button-back-list">Atr√°s</button></a>
  </div>
<main class="main-register">
  <div class="product-list-box">
    <div class="title-selling">
        <h1 id="product-list-title">Lista de Productos</h1>
    </div>
    <div class="main-container">

        <div class="container-list">
            <!-- <section class="container-selling"> -->
              <table description="Product table for edit " class="list-table">
                <tr>
                  <th>Nombre</th><th>Accion</th>
                </tr>
                <tr>
                  <td><label><p class="list-label">Crear nuevo producto</p></label></td>
                  <td class="role-td">
                    <form action="/products/new" method="get">
                      <button class="new-product-button" type="submit"><i class="fa-solid fa-plus"></i>  Nuevo Producto</button>
                    </form>
                  </td>
                </tr>
                <% for(let i=0;i<products.length;i++){%>
                 <tr>
                    <td class="product-list">
                     <p class="list-label"><%=products[i].name %><p>
                    </td>
                    <td class="edit-list">  
                        <form action="/products/<%=products[i].id%>/edit" method="get">
                        <button class="new-product-button" type="submit"><i class="fa-regular fa-pen-to-square"></i> Editar</button>
                      </form>
                       
                    </td>
                 </tr>

                <%} %>
            </table>
            </section>
        </div>
    </div>
</div>
</main>

  <%- include('../partials/footer') %>
</body>

</html>