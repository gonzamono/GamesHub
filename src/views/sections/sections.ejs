   <%- include('../partials/head')%>
  <body class="body-register">
    <%- include('../partials/header')%>
    <main class="main-register">
      <div id="gradient-border">
        <div class="role-box" >
          <h3 class="title">Secciones</h3>
        
          <table description="role table">
            <tr class="role-th">
              <th>Nombre</th>
              <th>Operaciones</th>
            </tr>
            <% for (section in sections){ %>
              <tr>
                <form action="/sections/<%=sections[section].id%>/edit?_method=PUT" method="post" >

                <td><input type="text" class="role-input" id="<%=sections[section].name%>" value="<%=sections[section].name%>" name="name"></td>
                <td class="role-td">
                  <div >
                    <button class="new-product-button" type="submit"><i class="fa-regular fa-pen-to-square"></i> Editar</button>
                  </div>
                </form>
                <div>
                    <form action="/sections/<%=sections[section].id%>?_method=DELETE" method="post">
                      <button class="edit-product-delete-button" type="submit"><i class="fa-solid fa-trash"></i> Borrar</button>
                    </form>
                </div>
                </td>
              </tr>
            <%}%>
            <tr>
              <form action="/sections/add" method="post" id="section-form">
              <td><input type="text" name="name" class="role-input-2" id="new-input-section"></td>            
                <td><button class="new-product-button" type="submit"><i class="fa-solid fa-plus"></i> Agregar</button></td>
                <td></td>
              </form>  
            </tr>
          </table>
          
        </div>
     </div>
    <p class="warning-msg" id="warning"></p>
    <% if (locals.errors && errors.name){%>
      <div class="warning-msg" id="warning">
          <%= errors.name.msg%>
      </div>
  <%}%>
  </main>
  <%- include('../partials/footer')%>
  <script type="text/javascript" src="/js/validationSection.js"></script>
</body>
</html>
