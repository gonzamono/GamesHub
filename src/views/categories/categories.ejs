
  
  <%- include('../partials/head')%>
  <body class="body-register">
    <%- include('../partials/header')%>
    <a href="/users/adminPanel"><button class="button-back">Back</button></a>
    <main class="main-register">
    <div class="role-box" id="gradient-border">
      <h3 class="category-title">Categor√≠as</h3>
     
      <table description="role table">
        <tr class="role-th">
          <th>Nombre</th>
          <th>Operaciones</th>
        </tr>
        
       <% for (category in categories){ %>
        <tr>
          <form action="/categories/<%=categories[category].id%>/edit?_method=PUT" method="post">
          <td><input type="text" class="role-input" id="<%=categories[category].name%>" value="<%=categories[category].name%>" name="name"></td>
          <td class="role-td">
            <div >
              <button class="new-product-button" type="submit"><i class="fa-regular fa-pen-to-square"></i> Editar</button>
            </div>
          </form>
           <div >
              <form action="/categories/<%=categories[category].id%>?_method=DELETE" method="post">
                <button class="edit-product-delete-button" type="submit"><i class="fa-solid fa-trash"></i> Borrar</button>
              </form>
           </div>
          </td>
        </tr>
        <%}%>
        <tr>
          <form action="/categories/add" method="post" id="categories-form">
            <td ><input type="text" name="name" class="role-input-2" id="new-input-category"></td>            
            <td ><button class="new-product-button" type="submit"><i class="fa-solid fa-plus"></i> Agregar</button></td>
            <td></td>
          </form>  
        </tr>
      </table>
      
    </div>
    <p class="warning-msg" id="warning"></p>
    <% if (locals.errors && errors.name){%>
      <div class="warning-msg" id="warning">
          <%= errors.name.msg%>
      </div>
  <%}%>
  </main>
  <%- include('../partials/footer')%>
  <script type="text/javascript" src="/js/validationCategories.js"></script>
</body>

